<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="/css/styles.css">
<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4 w-50">
        <h2 class="text-center">Login</h2>
        <form action="/login" method="POST" class="mb-3">
            <div class="mb-2">
                <label for="username" class="form-label">Username</label>
                <input type="text" id="username" class="form-control" name="username" placeholder="Enter username" required>
            </div>
            <div class="mb-2">
                <label for="password" class="form-label">Password</label>
                <input type="password" id="password" class="form-control" name="password" placeholder="Enter password" required>
            </div>
            <button type="submit" class="btn btn-primary w-100">Login</button>
        </form>
        <% if (error) { %>
            <p class="text-danger text-center"><%= error %></p>
        <% } %>
        <% if (remainingAttempts !== undefined && remainingAttempts > 0) { %>
            <p class="text-warning text-center">Attempts left: <%= remainingAttempts %></p>
        <% } %>
        <p class="text-center">Don't have an account? <a href="/register">Register</a></p>
    </div>
</div>
